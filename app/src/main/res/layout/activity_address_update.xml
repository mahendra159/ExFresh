<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/submit_layout"
    android:scrollbars="vertical"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient2"
            android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/splash_logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>
            <!-- Logo Ends -->
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_below="@id/header">

        <!--Put form controls here-->

        <TextView
            android:id="@+id/Add_First_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditFirstName"
            android:layout_height="wrap_content"
            android:hint="Enter your first name"
            android:inputType="textPersonName"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

        <TextView
            android:id="@+id/Add_Last_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditLastName"
            android:layout_height="wrap_content"
            android:hint="Enter your last name"
            android:inputType="textPersonName"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

        <TextView
            android:id="@+id/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditAddress"
            android:layout_height="wrap_content"
            android:hint="Enter your address"
            android:inputType="textPostalAddress"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

        <TextView
            android:id="@+id/Address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address(Line 2)"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditAddress2"
            android:layout_height="wrap_content"
            android:hint="Enter your address"
            android:inputType="textPostalAddress"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

        <TextView
            android:id="@+id/Zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip/Postal Code"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditZipPostal"
            android:layout_height="wrap_content"
            android:hint="Enter your zip or postal code"
            android:inputType="number"
            android:maxLength="6"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

