        <TextView
            android:id="@+id/AliasAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please assign an address title for future reference. *"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditAliasAdd"
            android:layout_height="wrap_content"
            android:hint="Provide alias to this address"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip">
        </EditText>

        <Button
            android:id="@+id/ButtonAddUpdate"
            android:text="Submit"
            android:background="@drawable/red_button"
            style="@style/button_text">
        </Button>

    </LinearLayout>


</RelativeLayout>

