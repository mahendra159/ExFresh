        <TextView
            android:id="@+id/MobilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditMobilePhone"
            android:layout_height="wrap_content"
            android:hint="Do not add (+91) or (0)"
            android:inputType="number"
            android:maxLength="10"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

        <TextView
            android:id="@+id/HomePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile 2 (optional)"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditHomePhone"
            android:layout_height="wrap_content"
            android:hint="Do not add (+91) or (0)"
            android:inputType="number"
            android:maxLength="10"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip">
        </EditText>

       <!--
        <TextView
            android:id="@+id/AdditionalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Information"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditAdditionalInformation"
            android:layout_height="wrap_content"
            android:hint="Enter any other additional information you would like to share with us"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent"
